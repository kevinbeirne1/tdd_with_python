[Unit]
Description = Gunicorn server for DOMAIN

[Service]
Restart=on-failure
User=kbeirne
WorkingDirectory=/home/kbeirne/sites/DOMAIN
EnvironmentalFile=/home/kbeirne/sites/DOMAIN/.env

ExecStart=/home/kbeirne/sites/DOMAIN/virtualenv/bin/gunicorn \
    --bind unix:/tmp/DOMAIN.socket \
    superlists.wsgi:application

[Install]
WantedBy=multi-user.target
    
